<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.niklas.projekt.NewPlan.Ziele">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:id="@+id/Uebung"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Beschreiben Sie den Fehler:"
        android:textSize="20sp"
        android:id="@+id/textFehler"
        android:layout_below="@+id/Uebung"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerFehler"
        android:layout_below="@+id/textFehler"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:text="Eigene Fehlermeldung:"
        android:id="@+id/textFehler2"
        android:layout_below="@+id/spinnerFehler"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp"
        android:layout_alignRight="@+id/spinnerFehler"
        android:layout_alignEnd="@+id/spinnerFehler" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editFehler"
        android:layout_below="@+id/textFehler2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textFehler2"
        android:layout_alignEnd="@+id/textFehler2" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Senden"
        android:textSize="20dp"
        android:id="@+id/Senden"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editFehler"
        android:layout_alignEnd="@+id/editFehler" />


</RelativeLayout>
